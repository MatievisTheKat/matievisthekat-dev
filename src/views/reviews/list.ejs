<html class="no-js">
  <!--<![endif]-->
  <head>
    <%- include("../partials/head.ejs") %>
  </head>
  <body>
    <!--[if lt IE 7]>
      <p class="browsehappy">
        You are using an <strong>outdated</strong> browser. Please
        <a href="#">upgrade your browser</a> to improve your experience.
      </p>
    <![endif]-->
    <%- include("../partials/navbar.ejs") %>
    <!-- Custom content -->

    <div class="container padding-10 container center z-depth-2 w-25 unique-color-dark">
      <h6 class="text-primary">
        Average:
        <span class="<%- averageStars > 4 ? "text-success" : averageStars > 2 ? "text-info" : "text-danger" %>">
          <i class="fas fa-star"></i>
          <%- averageStars %>
        </span>
      </h6>
      <a href="/reviews/new" class="btn btn-primary btn-md">Add a review</a>
    </div>
    <br />
    <div class="animate__animated animate__bounceInUp container center">
      <% for(let i = 0; i < reviews.length; i += 2) { const part =
      reviews.slice(i, i + 2); %>
      <div class="row">
        <%- part.map(review => `
        <div
          class="col w-25 padding-20 mb-4 margin-right-20 margin-left-20 unique-color-dark text-primary z-depth-2"
        >
          <img
            src="${review.author.avatarURL}"
            alt="User avatar"
            class="avatar-img"
            style="width: 5rem;"
          />
          <h5>
            ${review.author.username}
          </h5>
          ${review.author.verified ? `<small><i class="fas fa-user-check"></i> Verified</small>` : ""}
          <div class="center">
            <hr
              class="deep-purple accent-2 mb-2 mt-1 d-inline-block mx-auto"
              style="width: 140px;"
            />
          </div>

          <div class="center mb-1 ${review.stars > 4 ? "text-success" : review.stars > 2 ? "text-info" : "text-danger"}">
            <i class="fas fa-star"></i>
            ${review.stars} / 5
          </div>

          ${review.text}
        </div>
        `).join("") %>
      </div>
      <% } %>
    </div>

    <!-- Included content -->
    <%- include("../partials/footer.ejs") %> <%- include("../partials/js.ejs")
    %>
  </body>
</html>
